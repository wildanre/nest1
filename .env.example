# Database Configuration (Cloud Database)
# For local development, use local database
# For production, use cloud database credentials
DB_HOST=your-cloud-db-host.com
DB_PORT=3306
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=nestjs_auth

# Database Additional Configuration
DB_SSL=true                        # Set to true for cloud databases
DB_SSL_REJECT_UNAUTHORIZED=true    # Set to false if using self-signed certificates
DB_SYNC=false                      # Set to true only for development
DB_CONNECTION_LIMIT=10             # Max number of connections
DB_ACQUIRE_TIMEOUT=60000           # Connection acquisition timeout (ms)
DB_TIMEOUT=60000                   # Query timeout (ms)

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
FROM_EMAIL=noreply@yourapp.com
FRONTEND_URL=http://localhost:3000
NODE_ENV=development
